<!-- Loop over each object in the projects array -->

{{#each reviews as |review| }}
<div class="row mb-4 review">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/review/{{review.id}}">{{review.name}}</a>
    </h2>
    <p>Created by {{review.user.name}} on {{format_date review.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{review.description}}
    </p>
  </div>
</div>
{{/each}}



<script src="./js/homepage.js"></script>
